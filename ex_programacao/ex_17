// Descubra a idade do gato em relação a do ser humano. Escreva um programa em Javascript 
// considerando as regras a seguir e calcule a idade de um gato que tem 7 anos humanos. 
// Some 15 anos para o primeiro ano de vida do peludo e 10 para o segundo ano de vida. 
//A partir do terceiro aniversário em diante, acrescente quatro anos. 

function calcularIdadeGato(idade, nome) {
    var nome = prompt("Qual o nome do seu gatinho:");
    var idade = Number(prompt("E a idade?"));

    idadeFixa = 7

    if (idade == 1) {
        novaIdade = idadeFixa + 15;
        document.write(nome + " tem " + novaIdade + "em anos humanos");
    } else if (idade == 2) {
        novaIdade = idadeFixa + 10;
        document.write(nome + " tem " + novaIdade + "em anos humanos");
    } else if (idade >= 3) {
        novaIdade = idadeFixa + 4;
        document.write(nome + " tem " + novaIdade + "em anos humanos");
    }
}

calcularIdadeGato();
